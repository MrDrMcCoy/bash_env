#!/bin/bash

# Prepend stuff to PATH
export PATH=$HOME/bin:$PATH

# Source extra Mac stuff is on a Mac
[[ "$(uname)" == 'Darwin' ]] && source osx

# History settings
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=1000
HISTFILESIZE=2000
HISTTIMEFORMAT="%d/%m/%y %T "

# Enable Bash completion
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then source /etc/bash_completion ; fi

# Start SSH agent
SSH_ENV="$HOME/.ssh/environment"
start_agent () {
     echo "Initialising new SSH agent..."
     /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
     echo succeeded
     chmod 600 "${SSH_ENV}"
     source "${SSH_ENV}" > /dev/null
     /usr/bin/ssh-add;
}
if [ -f "${SSH_ENV}" ]; then
     source "${SSH_ENV}" > /dev/null
     ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
         start_agent;
     }
else
     start_agent;
fi

# Set a cooler prompt for git and stuff
GIT_PROMPT_ONLY_IN_REPO=0
source bash-git-prompt/gitprompt.sh

# Source bblib and remove unwanted traps
source bblib/bblib.bash
trap - INT TERM QUIT HUP EXIT ERR

# Source my settings
source aliases
source colors
source functions
source options

