#!/usr/bin/env bash

# Load pyenv
if [ -d "$HOME/.pyenv" ] && which pyenv 2>&1 > /dev/null ; then
  eval "$(pyenv init -)"
else
logger -st bash_env:osx "ERROR: pyenv is not installed."
fi

# Exports for Homebrew
export PATH="/usr/local/Cellar:/opt/local/bin:/opt/local/sbin:$PATH"

# Prepend stuff to PATH
export PATH="$(
tr '\n' ':' << EOF
$(tr ':' '\n' <<< "$PATH")
/opt/X11/bin
/opt/local/bin
/opt/local/sbin
/usr/lib/mit/sbin
/usr/local/Cellar
EOF
)"

export MANPATH=/opt/local/share/man:$MANPATH
export DISPLAY=:0.0

# Colors
if eval $(gdircolors "$PWD/dircolors/dircolors.256dark") ; then
  alias ls='gls --color=always'
  alias grep='pcregrep --color=auto'
fi
